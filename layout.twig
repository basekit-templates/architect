            <!-- Sticky Header -->

        <script src="{{asset('js/position-sticky.js')}}"></script>


            <!-- Nav Menu Script -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
           <script>window.jQuery || document.write('<script src="{{ asset('libs/jquery-1.10.2.min.js')}}"><\/script>')
        </script>

        <script>
            // Toggles class open to display/hide the whole navigation
            $( ".navigation-toggle" ).click(function() {
                $( ".bk-extendednavigation" ).toggleClass( "open" );
            });
            // Togglse class open to display/hide folders
            $( ".navigation-item.folder" ).each(function() {
                $( this ).click(function() {
                    $( this ).toggleClass( "open" );
                });
            });
        </script>

         <!-- Close folders on nav on touch devices -->

        <script src="//ajax.googleapis.com/ajax/libs/jquery/2.2.3/jquery.min.js"></script>
            <!-- Touch Script -->
        <script>
            $(document).on('mq4hsChange', function (e) {
                console.log(e);
                $(document.documentElement).toggleClass('no-touch', e.trueHover);
            });
        </script>
            <!-- Touch Shim -->
        <script src="{{asset('js/mq4-hover-shim.js')}}"></script>

            <!-- Single Post 'has-image' class -->

        <script>
            $(document).ready(function(){
            if ( $("article").hasClass("post-article--has-image") ) {
            $(".template-blogpost").addClass("has-image");
            }
            });
        </script>


    </body>

